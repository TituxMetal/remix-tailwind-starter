{
  "author": "Titux Metal (DEV) <github@lgdweb.fr>",
  "description": "Remix App starter with Tailwindcss",
  "license": "MIT",
  "name": "remix-tailwind-starter",
  "private": true,
  "repository": "https://github.com/TituxMetal/remix-tailwind-starter",
  "sideEffects": false,
  "version": "1.0.0",
  "scripts": {
    "build": "run-s \"build:*\"",
    "build:css": "yarn generate:css --minify",
    "build:remix": "remix build",
    "dev": "run-p \"dev:*\"",
    "dev:css": "yarn generate:css --watch",
    "dev:remix": "remix dev",
    "generate:css": "tailwindcss -o ./src/tailwind.css",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@remix-run/node": "1.8.2",
    "@remix-run/react": "1.8.2",
    "@remix-run/serve": "1.8.2",
    "isbot": "3.6.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "1.8.2",
    "@remix-run/eslint-config": "1.8.2",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.9",
    "eslint": "8.29.0",
    "npm-run-all": "4.1.5",
    "prettier-plugin-tailwindcss": "0.2.0",
    "tailwind-styled-components": "2.2.0",
    "tailwindcss": "3.2.4",
    "typescript": "4.9.4"
  },
  "engines": {
    "node": ">=14"
  }
}
